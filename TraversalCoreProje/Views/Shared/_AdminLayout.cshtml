@{
	Layout = null;
}
<!DOCTYPE html>

<html lang="en"
	  class="light-style layout-menu-fixed"
	  dir="ltr"
	  data-theme="theme-default"
	  data-assets-path="../assets/"
	  data-template="vertical-menu-template-free">

@await Html.PartialAsync("~/Views/AdminLayoutPartial/_HeaderPartial.cshtml")

<body>
	<!-- Layout wrapper -->
	<div class="layout-wrapper layout-content-navbar">
		<div class="layout-container">
			<!-- Menu -->

			<aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">

				@await Html.PartialAsync("~/Views/AdminLayoutPartial/_AppBrandDemoPartial.cshtml")

				<div class="menu-inner-shadow"></div>

				@await Html.PartialAsync("~/Views/AdminLayoutPartial/_SidebarPartial.cshtml")

			</aside>

			<div class="layout-page">
				<!-- Navbar -->
				@await Html.PartialAsync("~/Views/AdminLayoutPartial/_NavbarPartial.cshtml")


				<div class="content-wrapper">
					<!-- Content -->

					<div class="container-xxl flex-grow-1 container-p-y">
						<!-- Basic Layout -->
						@RenderBody()
					</div>

					@await Html.PartialAsync("~/Views/AdminLayoutPartial/_FooterPartial.cshtml")

					<!-- / Footer -->

					<div class="content-backdrop fade"></div>
				</div>
				<!-- Content wrapper -->
			</div>
			<!-- / Layout page -->
		</div>

		<!-- Overlay -->
		<div class="layout-overlay layout-menu-toggle"></div>
	</div>

	@await Html.PartialAsync("~/Views/AdminLayoutPartial/_ScriptPartial.cshtml")


</body>
</html>